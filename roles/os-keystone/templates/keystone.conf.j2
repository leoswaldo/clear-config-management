[DEFAULT]
rpc_backend = rabbit
admin_token = {{ admin_token }}

{% if log_debug %}
debug = True
{% endif %}

[database]
connection = mysql+pymysql://keystone:{{ keystone_database_password }}@{{ groups['dbservers'][0] }}/keystone

[token]
provider = fernet

[cache]
enabled = True
backend = oslo_cache.memcache_pool

[catalog]
caching = False

[assignment]
driver = sql

[oslo_messaging_rabbit]
rabbit_host = {{ groups['messaging_servers'][0] }}
rabbit_userid = {{ rabbitmq_username }}
rabbit_password = {{ rabbitmq_password }}
